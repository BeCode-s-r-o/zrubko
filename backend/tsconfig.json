{
  "compilerOptions": {
    "target": "es2020",
 
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./.medusa/server",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "types": ["node"],
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "strict": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src", "medusa-config.js"],
  "exclude": [
    "**/__tests__",
    "**/__fixtures__",
    "node_modules",
    "build",
    ".cache",
    ".medusa"
  ]
}
